# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/bio_radar
DATABASE_MAX_CONNECTIONS=10

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
RUST_LOG=info,bio_radar_backend=debug

# Sentinel Hub API (Satellite Data)
SENTINEL_CLIENT_ID=your_client_id
SENTINEL_CLIENT_SECRET=your_client_secret
SENTINEL_API_URL=https://services.sentinel-hub.com

# OpenEO API (Alternative)
OPENEO_API_URL=https://openeo.cloud
OPENEO_ACCESS_TOKEN=your_access_token

# AI Model Paths
ONNX_MODEL_PATH=./assets/models/hls_segmentation.onnx

# JWT Authentication
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
